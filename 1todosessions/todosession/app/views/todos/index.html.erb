<h1>Todos#index</h1>
<p>Find me in app/views/todos/index.html.erb</p>



<%= form_tag(todos_path) do %>
     <p>
      <%= label_tag(:task) %>
      <%= text_field_tag(:task, nil, autofocus: true) %>
    </p>
     <%= submit_tag "Add"%>
 <% end %>

<ul>
<% @todos.each do |task| %>  
	<li><%= task %>
	<%= link_to "X", deleteone_path(task), method: :delete, data: {confirm: "are you sure"} %></li>
<% end %>
</ul>

<%= link_to "Delete All", todos_path, method: :delete, data: {confirm: "are you sure"} %>
 